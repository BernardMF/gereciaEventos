      <Label layoutX="36.0" layoutY="82.0" text="Nome" />
      <Label layoutX="35.0" layoutY="128.0" text="Categoria" />
      <Label layoutX="38.0" layoutY="174.0" text="Preço" />
      <Label layoutX="35.0" layoutY="219.0" text="Descrição" />
      <Label layoutX="39.0" layoutY="264.0" text="Imagem" />
      <TextField fx:id="campoNome" layoutX="116.0" layoutY="80.0" />
      <ComboBox fx:id="boxCategoria" layoutX="116.0" layoutY="125.0" prefWidth="150.0" />
